{
  "name": "launch-darkly-lite",
  "version": "1.0.0",
  "description": "A lightweight feature flag server built with TypeScript, Express, and Effect.js",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/database/DataSource.config.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/database/DataSource.config.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/database/DataSource.config.ts",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d src/database/DataSource.config.ts",
    "schema:sync": "typeorm-ts-node-commonjs schema:sync -d src/database/DataSource.config.ts",
    "schema:drop": "typeorm-ts-node-commonjs schema:drop -d src/database/DataSource.config.ts",
    "seed:run": "node scripts/run-seeds.js",
    "migrate:clean-architecture": "node scripts/migrate-to-clean-architecture.js",
    "docs:serve": "node scripts/serve-docs.js",
    "docs:validate": "node scripts/validate-openapi.js",
    "docs:generate-client": "openapi-generator-cli generate -i openapi.yaml -g typescript-fetch -o ./client/typescript"
  },
  "keywords": [
    "feature-flags",
    "typescript",
    "express",
    "effect",
    "passport",
    "jwt"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "effect": "^2.4.1",
    "express": "^4.18.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.6.3",
    "typeorm": "^0.3.17",
    "yamljs": "^0.3.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.7.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.2",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.15.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/yamljs": "^0.2.34",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "~5.1.6"
  }
}
